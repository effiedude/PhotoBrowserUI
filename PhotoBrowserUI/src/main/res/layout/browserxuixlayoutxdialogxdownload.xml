<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:paddingStart="30dp"
        android:paddingLeft="30dp"
        android:paddingEnd="30dp"
        android:paddingRight="30dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/browserxuixdrawablexdialogxdownloadxback"
        >

        <TextView
            android:id="@+id/browserDownDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="保存图片到相册"
            android:textSize="16dp"
            android:textColor="@color/valuexcolorxblack"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/browserDownDialogConfirmButton"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/browserDownDialogTitle"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="确认"
            android:textSize="16dp"
            android:textColor="@color/valuexcolorxwhite"
            android:textStyle="bold"
            android:background="@drawable/browserxuixdrawablexbuttonxback"
            />

        <TextView
            android:id="@+id/browserDownDialogCancelButton"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/browserDownDialogTitle"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="取消"
            android:textSize="16dp"
            android:textColor="@color/valuexcolorxwhite"
            android:textStyle="bold"
            android:background="@drawable/browserxuixdrawablexbuttonxback"
            />

    </RelativeLayout>

</FrameLayout>